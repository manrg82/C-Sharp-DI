<Window x:Class="DatePickerEjemplo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatePickerEjemplo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Seleccione una fecha:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <DatePicker x:Name="pckFecha" HorizontalAlignment="center" VerticalAlignment="Top" Margin="10" SelectedDateFormat="Short" />
        <Button Content="Mostrar Fecha Seleccionada" HorizontalAlignment="right" VerticalAlignment="Top" Margin="10" Click="BtnMostrarFecha_Click"/>
    </Grid>
</Window>
