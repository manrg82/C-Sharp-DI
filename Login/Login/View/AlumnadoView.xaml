<Window x:Class="WPF_LoginForm.View.AlumnadoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WPF_LoginForm.ViewModel"
        mc:Ignorable="d"
        Title="Gestion de Alumnado" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#DA34AE" Padding="10">
            <StackPanel>
                <TextBlock Text="IES Maestre de Calatrava" 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           Margin="0,0,0,30"/>
                
                <Button Content="INICIO" 
                        Background="#C62DAE" 
                        Foreground="White" 
                        BorderThickness="0"
                        Padding="10" 
                        Margin="0,5"
                        Cursor="Hand"/>
                
                <Button Content="PARTICIPANTES" 
                        Background="#8A16C1" 
                        Foreground="White" 
                        BorderThickness="0"
                        Padding="10" 
                        Margin="0,5"
                        Cursor="Hand"/>
                
                <Button Content="EMPRESAS" 
                        Background="#C62DAE" 
                        Foreground="White" 
                        BorderThickness="0"
                        Padding="10" 
                        Margin="0,5"
                        Cursor="Hand"/>
                
                <Button Content="RETOS" 
                        Background="#C62DAE" 
                        Foreground="White" 
                        BorderThickness="0"
                        Padding="10" 
                        Margin="0,5"
                        Cursor="Hand"/>
                
                <Button Content="TALENT LAB" 
                        Background="#C62DAE" 
                        Foreground="White" 
                        BorderThickness="0"
                        Padding="10" 
                        Margin="0,5"
                        Cursor="Hand"/>
                
                <Button Content="USUARIOS" 
                        Background="#C62DAE" 
                        Foreground="White" 
                        BorderThickness="0"
                        Padding="10" 
                        Margin="0,5"
                        Cursor="Hand"/>

                <Button Content="GRUPOS" 
                        Background="#462AD8" 
                        Foreground="White" 
                        BorderThickness="0"
                        Padding="10" 
                        Margin="0,5"
                        Cursor="Hand"
                        Click="BtnGrupos_Click"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="White" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="10"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"/>
                    <TextBlock Grid.Column="1" 
                               Text="Search" 
                               FontSize="12"
                               Foreground="Gray"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding Alumnos}"
                      SelectedItem="{Binding SelectedAlumno}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Background="White"
                      BorderBrush="#CCCCCC"
                      BorderThickness="1"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#EEEEEE">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="*"/>
                    <DataGridTextColumn Header="Curso" Binding="{Binding Curso}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Border Grid.Column="2" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1"
                Margin="0,20,20,20"
                Padding="20">
            <StackPanel>
                <TextBlock Text="ALUMNADO" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#462AD8"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Nombre" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="5" 
                         Margin="0,0,0,15"
                         BorderBrush="#CCCCCC"/>

                <TextBlock Text="Apellidos" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding Apellidos, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="5" 
                         Margin="0,0,0,15"
                         BorderBrush="#CCCCCC"/>

                <TextBlock Text="Curso" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <ComboBox SelectedItem="{Binding Curso}" 
                          Padding="5" 
                          Margin="0,0,0,30"
                          BorderBrush="#CCCCCC">
                    <ComboBoxItem Content="SCI1"/>
                    <ComboBoxItem Content="SCI2"/>
                </ComboBox>

                <Button Content="Anadir" 
                        Command="{Binding AddCommand}"
                        Background="#28AEED" 
                        Foreground="White" 
                        BorderThickness="0"
                        Padding="10" 
                        Margin="0,5"
                        Cursor="Hand"
                        FontWeight="SemiBold"/>

                <Button Content="Modificar" 
                        Command="{Binding UpdateCommand}"
                        Background="#462AD8" 
                        Foreground="White" 
                        BorderThickness="0"
                        Padding="10" 
                        Margin="0,5"
                        Cursor="Hand"
                        FontWeight="SemiBold"/>

                <Button Content="Eliminar" 
                        Command="{Binding DeleteCommand}"
                        Background="#DA34AE" 
                        Foreground="White" 
                        BorderThickness="0"
                        Padding="10" 
                        Margin="0,5"
                        Cursor="Hand"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
