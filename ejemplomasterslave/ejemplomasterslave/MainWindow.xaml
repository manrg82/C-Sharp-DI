<Window x:Class="ejemplomasterslave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ejemplomasterslave"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="PeopleDataGrid" Grid.Column="0" AutoGenerateColumns="False" SelectionMode="Single" SelectionChanged="PeopleDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="auto" />
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="auto" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" Margin="10">
            <StackPanel DataContext="{Binding SelectedPerson}">
                <TextBlock FontWeight="Bold" FontSize="14" Text="Detalle Persona" Margin="0 0 0 10" />

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Id: " FontWeight="SemiBold" Width="60" />
                    <TextBlock Text="{Binding Id}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Name: " FontWeight="SemiBold" Width="60" />
                    <TextBlock Text="{Binding Name}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Age: " FontWeight="SemiBold" Width="60" />
                    <TextBlock Text="{Binding Age}" />
                </StackPanel>
            </StackPanel>

            <Separator Margin="0,10" />

            <TextBlock FontWeight="Bold" FontSize="14" Text="Añadir Persona" Margin="0 0 0 10" />

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Id:" Width="40" VerticalAlignment="Center" />
                <TextBox x:Name="IdTextBox" Width="120" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Name:" Width="40" VerticalAlignment="Center" />
                <TextBox x:Name="NameTextBox" Width="120" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Age:" Width="40" VerticalAlignment="Center" />
                <TextBox x:Name="AgeTextBox" Width="120" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="AddPersonButton" Content="Añadir" Click="AddPersonButton_Click" Width="80" Margin="0,0,10,0" />
                <Button x:Name="SaveButton" Content="Guardar en archivo" Click="SaveButton_Click" Width="140" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
