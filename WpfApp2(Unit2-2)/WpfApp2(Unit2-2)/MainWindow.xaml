<Window x:Class="WpfApp2_Unit2_2_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2_Unit2_2_"
        mc:Ignorable="d"
        Title="Registro de Alumnos" Height="280" Width="380">
    <Grid >
        <Label Content="Nombre completo" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Margin="135,14,0,0" VerticalAlignment="Top" Width="200"/>
        
        <Label Content="Edad" HorizontalAlignment="Left" Margin="20,40,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="txtEdad" HorizontalAlignment="Left" Margin="135,44,0,0" VerticalAlignment="Top" Width="60"/>

        <Label Content="Sexo" HorizontalAlignment="Left" Margin="20,70,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbMasculino" Content="Masculino" HorizontalAlignment="Left" Margin="135,76,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbFemenino" Content="Femenino" HorizontalAlignment="Left" Margin="250,76,0,0" VerticalAlignment="Top"/>

        <Label Content="Curso" HorizontalAlignment="Left" Margin="20,100,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbCurso" HorizontalAlignment="Left" Margin="135,102,0,0" VerticalAlignment="Top" Width="200">
            <ComboBoxItem Content="SMR"/>
            <ComboBoxItem Content="DAM"/>
            <ComboBoxItem Content="DAW"/>
            <ComboBoxItem Content="ASIR"/>
        </ComboBox>

        <Label Content="Horario" HorizontalAlignment="Left" Margin="20,130,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbHorario" HorizontalAlignment="Left" Margin="135,132,0,0" VerticalAlignment="Top" Width="200">
            <ComboBoxItem Content="Diurno"/>
            <ComboBoxItem Content="Vespertino"/>
            <ComboBoxItem Content="Nocturno"/>
        </ComboBox>

        <CheckBox x:Name="chkTI" Content="T.I," HorizontalAlignment="Left" Margin="26,170,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkOtroDoc" Content="Otro Documento:" HorizontalAlignment="Left" Margin="120,170,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtOtroDoc" HorizontalAlignment="Left" Margin="230,167,0,0" VerticalAlignment="Top" Width="100"/>
        <!--TextChanged="txtOtroDoc_TexTChanged"-->
        <Button x:Name="btnRegistrar" Content="Registrar" HorizontalAlignment="Left" Margin="26,205,0,0" VerticalAlignment="Top" Width="125" Click="btnRegistrar_Click"/>
        <Button x:Name="btnSalir" Content="Salir" HorizontalAlignment="Left" Margin="210,205,0,0" VerticalAlignment="Top" Width="125" Click="btnSalir_Click"/>
    </Grid>
</Window>
