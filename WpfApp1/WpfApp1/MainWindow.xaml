<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Holamundo" Foreground="Blue"/>
            <TextBox Name="txtEntrada" Width="200" Height="25" Margin="0,0,0,10"/>
            <Button Content="Cambiar texto" Width="120" Click="BtnCambiarTexto_Click"/>
        </StackPanel>
    </Grid>
</Window>
