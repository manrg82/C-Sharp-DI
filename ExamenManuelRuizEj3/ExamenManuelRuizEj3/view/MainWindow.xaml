                                    <DataGridTextColumn Header="Nickname" Binding="{Binding Nick}" Width="*"/>
                                    <DataGridTextColumn Header="Puntuación" Binding="{Binding Puntuacion}" Width="*"/>
                                    <DataGridTextColumn Header="Fecha de Partida" Binding="{Binding Fecha}" Width="*"/>
                                    <DataGridTextColumn Header="Nivel" Binding="{Binding Nivel}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
