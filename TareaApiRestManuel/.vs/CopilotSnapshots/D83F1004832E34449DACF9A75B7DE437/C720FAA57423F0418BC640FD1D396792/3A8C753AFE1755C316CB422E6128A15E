using System.Net.Http.Json;
using System.Text;
using System.Windows;

namespace TareaApiRestManuel
{
    public partial class MainWindow : Window
    {
        private readonly HttpClient _httpClient;
        private const string BaseUrl = "https://api.restful-api.dev/objects";

        public MainWindow()
        {
            InitializeComponent();
            _httpClient = new HttpClient();
        }

        private async void RefreshButton_Click(object sender, RoutedEventArgs e)
        {
            ObjectsListBox.Items.Clear();
            DetailsTextBox.Clear();
            CreateTextBox.Clear();

            try
            {
                var objects = await _httpClient.GetFromJsonAsync<object[]>(BaseUrl);
                if (objects != null)
                {
                    int i = 0;
                    foreach (var obj in objects)
                    {
                        // show a simple display string
                        var display = obj?.ToString() ?? "null";
                        ObjectsListBox.Items.Add(new { _display = display, _json = System.Text.Json.JsonSerializer.Serialize(obj), _index = i });
                        i++;
                    }
                }
            }
            catch (System.Exception ex)
            {
                MessageBox.Show($"Error fetching objects: {ex.Message}");
            }
        }

        private void ObjectsListBox_SelectionChanged(object sender, System.Windows.Controls.SelectionChangedEventArgs e)
        {
            if (ObjectsListBox.SelectedItem == null) return;
            var item = ObjectsListBox.SelectedItem;
            var jsonProp = item.GetType().GetProperty("_json");
            if (jsonProp != null)
            {
                var json = jsonProp.GetValue(item) as string;
                DetailsTextBox.Text = json;
            }
        }

        private async void GetByIdButton_Click(object sender, RoutedEventArgs e)
        {
            var id = IdTextBox.Text?.Trim();
            if (string.IsNullOrEmpty(id))
            {
                MessageBox.Show("Please enter an ID.");
                return;
            }

            try
            {
                var obj = await _httpClient.GetStringAsync($"{BaseUrl}/{id}");
                DetailsTextBox.Text = obj;
            }
            catch (HttpRequestException hre)
            {
                MessageBox.Show($"Error fetching object: {hre.Message}");
            }
        }

        private async void CreateButton_Click(object sender, RoutedEventArgs e)
        {
            var json = CreateTextBox.Text?.Trim();
            if (string.IsNullOrEmpty(json))
            {
                MessageBox.Show("Please enter JSON to create.");
                return;
            }

            try
            {
                using var content = new StringContent(json, Encoding.UTF8, "application/json");
                var response = await _httpClient.PostAsync(BaseUrl, content);
                if (response.IsSuccessStatusCode)
                {
                    MessageBox.Show("Object created successfully.");
                    RefreshButton_Click(null, null);
                }
                else
                {
                    var resp = await response.Content.ReadAsStringAsync();
                    MessageBox.Show($"Error creating object: {response.StatusCode}\n{resp}");
                }
            }
            catch (System.Exception ex)
            {
                MessageBox.Show($"Error creating object: {ex.Message}");
            }
        }
    }
}