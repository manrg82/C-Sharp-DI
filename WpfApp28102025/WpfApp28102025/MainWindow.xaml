<Window x:Class="WpfApp28102025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp28102025"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <DockPanel Margin="10">
            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                <Button Name="AddButton" Content="Add Item" Margin="5" Click="AddUser"/>
                <Button Name="ChangeButton" Content="Change User" Margin="5" Click="ChangeUser"/>
                <Button Name="RemoveButton" Content="Remove Item" Margin="5" Click="RemoveUser"/>
                
            </StackPanel>
        <ListBox Name="UserListBox" DisplayMemberPath="Name" Width="150" Height="50" Margin="5"/>
    </DockPanel>
</Window>
