
<Window x:Class="StackNavigationUsability.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Navigation example" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Simple top bar with Back button -->
        <StackPanel Orientation="Horizontal" Background="#F3F3F3" Height="40">
            <Button x:Name="BackButton" Content="_Back" Width="90" Margin="8,4" Click="Back_Click"/>
            <TextBlock VerticalAlignment="Center" Margin="8,0"><Run Language="es-es" Text="MAIN WINDOW"/></TextBlock>
        </StackPanel>

        <!-- Main navigation container -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
