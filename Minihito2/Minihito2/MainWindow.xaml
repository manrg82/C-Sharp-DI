<Window x:Class="Minihito2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minihito2"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="¿Aceptas el reto?" Height="50" VerticalAlignment="Top" HorizontalAlignment="Stretch" Foreground="White" HorizontalContentAlignment="Center"  Background="#A359A4" FontSize="30" Grid.Row="0"/>
        <TabControl TabStripPlacement="Left" Grid.Row="1">
            <TabItem Header="INICIO"/>
            <TabItem Header="PARTICIPANTES">
                <TabControl>
                    <TabItem Header="ALUMNADO" Background="Brown" Width="150" Height="35">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
                                <TextBox x:Name="txtBarraBusqueda" HorizontalAlignment="Center" Margin="20" Style="{DynamicResource StyleTextBox}" TextChanged="txtBarraBusqueda_TextChanged"/>
                                <DataGrid Name="dgAlumnos" AutoGenerateColumns="False" SelectionChanged="dgAlumnos_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"/>
                                        <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}"/>
                                        <DataGridTextColumn Header="Especialidad" Binding="{Binding Especialidad}"/>
                                        <DataGridTextColumn Header="Grupo" Binding="{Binding Grupo}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="1" Width="400" Margin="10, 0,0,0">
                                <Image Source="/res/png hojas/palm_3086199.png" Width="70" HorizontalAlignment="Right" Height="100"/>
                                <Label Content="Alumnado" FontSize="40" Margin="30,0,0,0" Foreground="SaddleBrown"  FontFamily="Verdana"/>
                                <Label Content="Nombre" Style="{DynamicResource StyleDataAlumno}"/>
                                <TextBox x:Name="txtNombre" Style="{DynamicResource StyleTextBox}"/>
                                <Label Content="Apellido" Style="{DynamicResource StyleDataAlumno}"/>
                                <TextBox x:Name="txtApellido" Style="{DynamicResource StyleTextBox}"/>
                                <Label Content="Curso" Style="{DynamicResource StyleDataAlumno}"/>
                                <ComboBox x:Name="cmbEspecialidad" Style="{DynamicResource StyleComboBox}"/>
                            </StackPanel>
                            <Image Source="/res/logotipo-ies-maestredecalatrava-1.png" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Width="100" Height="40"/>
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" Height="40">
                                <Button x:Name="btnAnadir" Content="Añadir" Margin="10,0,0,0" Style="{DynamicResource StyleGeneralButton}" Click="btnAnadir_Click"/>
                                <Button x:Name="btnModificar" Content="Modificar" Margin="10,0,0,0" Style="{DynamicResource StyleGeneralButton}" Click="btnModificar_Click"/>
                                <Button x:Name="btnBorrar" Content="Borrar" Margin="10,0,10,0" Style="{DynamicResource StyleGeneralButton}" Click="btnBorrar_Click"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem Header="GRUPOS" Background="Brown" Width="150" Height="35">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Column="0" Grid.Row="0">
                                <Label Content="Alumnado no asignado" Style="{DynamicResource StyleGruposLabel}"/>
                                <ListBox ItemsSource="{Binding NombreApellido}" Style="{DynamicResource StyleListBox}"></ListBox>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Button x:Name="btnAnadirAlumno" Content="»" Style="{DynamicResource StyleGruposButton}"/>
                                <Button x:Name="btnQuitarAlumno" Content="«" Style="{DynamicResource StyleGruposButton}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Grid.Row="0">
                                <Label Content="Alumnado seleccionado" Style="{DynamicResource StyleGruposLabel}"/>
                                <ListBox ItemsSource="{Binding NombreApellido}" Style="{DynamicResource StyleListBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Grid.Row="0">
                                <Label Content="NOMBRE GRUPO" Style="{DynamicResource StyleDataAlumno}"/>
                                <TextBox x:Name="txtNombreGrupo" Style="{DynamicResource StyleTextBox}" Width="254"/>
                                <Button x:Name="btnAnadirGrupo" FontSize="20" Content="Añadir/Modificar" Style="{DynamicResource StyleGruposButton}"/>
                            </StackPanel>
                            <Label x:Name="lblNombreGrupo" Content="NOMBRE GRUPO SELECCIONADO" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center" Style="{DynamicResource StyleGruposLabel}"/>
                            <ListBox Grid.Row="1" Grid.Column="1" Style="{DynamicResource StyleListBox}"></ListBox>
                            <Button x:Name="btnEliminarGrupo" Content="Eliminar" Margin="0,50,0,0" Style="{DynamicResource StyleGruposButton}" FontSize="20" Grid.Row="1" Grid.Column="3" VerticalAlignment="Top"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="EMPRESAS"/>
            <TabItem Header="RETOS"/>
            <TabItem Header="TALENT LAB"/>
            <TabItem Header="USUARIOS"/>
        </TabControl>
    </Grid>
    <Window.Resources>
        <Style TargetType="Button" x:Key="StyleGeneralButton">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="Background" Value="#AC59A4"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="Button" x:Key="StyleGruposButton">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Background" Value="#AC59A4"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="-10"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="TextBox" x:Key="StyleTextBox">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </Style.Resources>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="20"/>
        </Style>
        
        <Style TargetType="ComboBox" x:Key="StyleComboBox">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </Style.Resources>
            <Setter Property="Background" Value="WhiteSmoke"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Label" x:Key="StyleDataAlumno">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="90, 0,0,0"/>
        </Style>
        <Style TargetType="Label" x:Key="StyleGruposLabel">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="ListBox" x:Key="StyleListBox">
            <Setter Property="Height" Value="200"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Background" Value="LightCoral"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
</Window>
    
